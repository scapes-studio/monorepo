# Kamal Secrets Configuration
# These are read from environment variables. Set them before running kamal commands:
#
#   export KAMAL_REGISTRY_PASSWORD="your-docker-hub-token"
#   export PONDER_RPC_URL_1="https://..."
#   export OPENSEA_API_KEY="your-api-key"
#   export POSTGRES_PASSWORD="your-db-password"
#   export S3_BUCKET="your-bucket-name"
#   export S3_KEY="your-access-key"
#   export S3_SECRET="your-secret-key"
#
# Or source from a local .env file (not committed to git):
#   source .env.production && kamal deploy

# Docker Hub access token (create at https://hub.docker.com/settings/security)
KAMAL_REGISTRY_PASSWORD=$KAMAL_REGISTRY_PASSWORD

# Ethereum RPC endpoints
PONDER_RPC_URL_1=$PONDER_RPC_URL_1
PONDER_RPC_URL_1_WS=$PONDER_RPC_URL_1_WS

# OpenSea API key
OPENSEA_API_KEY=$OPENSEA_API_KEY

# PostgreSQL password (used by both accessory and app)
POSTGRES_PASSWORD=$POSTGRES_PASSWORD

# Database connection string (constructed using the postgres accessory)
DATABASE_URL=$DATABASE_URL

# Database schema (unique per deployment for zero-downtime deploys)
DATABASE_SCHEMA=$(git rev-parse HEAD)

# Used for data imports
PUNKSCAPE_DATABASE_URL=$PUNKSCAPE_DATABASE_URL

# The auto generated static views schema name
PONDER_VIEWS_SCHEMA=scapes

# Disable ponder telemetry
PONDER_TELEMETRY_DISABLED=true

# S3 / DigitalOcean Spaces (for merge images)
S3_BUCKET=$S3_BUCKET
S3_REGION=$S3_REGION
S3_KEY=$S3_KEY
S3_SECRET=$S3_SECRET
S3_ENDPOINT=$S3_ENDPOINT
S3_PUBLIC_URL=$S3_PUBLIC_URL

# Gallery27 signer private keys (for auction signatures)
G27_SIGNER_PRIVATE_KEY=$G27_SIGNER_PRIVATE_KEY
G27V1_SIGNER_PRIVATE_KEY=$G27V1_SIGNER_PRIVATE_KEY

